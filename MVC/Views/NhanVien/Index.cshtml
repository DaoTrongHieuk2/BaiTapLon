@model IEnumerable<MVC.Models.NhanVien>

@{
   ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-container">
    <div class="w3-row">
        <b>San Pham/</b>index
        <a asp-action="Create" class="w3-btn w3-border w3-border-blue w3-round w3-right w3-tiny w3-horver-blue">+ Add new</a>
    </div>
    <hr/>
    <table class="w3-table-all w3-card-4 w3-centered">
        <thead>
            <tr class="w3-blue">
                <th class="w3-col l2">IdNV</th>
                <th class="w3-col l4">NameNV</th>
                <th class="w3-col l2">AddressNV</th>
                <th class="w3-col l2">PhoneNV</th>
                <th class="w3-col l2">AgeNV</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w3-col l2">@item.IdNV</td>
                    <td class="w3-col l4">@item.NameNV</td>
                    <td class="w3-col l2">@item.AddressNV</td>
                    <td class="w3-col l2">@item.PhoneNV</td>
                    <td class="w3-col l2">@item.AgeNV</td>
                    <td class="w3-col 14">
                        <a asp-action="Edit" asp-route-id="@item.IdNV" class="w3-button w3-green w3-round-large w3-small"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdNV" class="w3-button w3-red w3-round-large w3-small"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
